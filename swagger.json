    "/auth/login": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "로그인 페이지 불러오기",
        "responses": {
          "200": {
            "description": "로그인 페이지 불러오기 성공"
          }
        }
      },
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "이메일 존재여부 확인과 비밀번호 일치 확인후 토큰 발급",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_email": {
                    "type": "string",
                    "description": "유저 이메일"
                  },
                  "user_password": {
                    "type": "string",
                    "description": "유저 비밀번호"
                  }
                },
                "required": ["user_email", "user_password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "토큰 발급에 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Token generated successfully"
                    },
                    "token": {
                      "type": "string",
                      "example": "<generated_token>"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "db에 유저가 존재하지 않음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 500
                    },
                    "message": {
                      "type": "string",
                      "example": "Server error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
